{
	"name": "hactar",
	"version": "1.0.0",
	"description": "A lightweight Node.js CLI for gathering and visualising storage information from Plex Media Server libraries",
	"homepage": "https://github.com/joemaddalone/hactar#readme",
	"bugs": {
		"url": "https://github.com/joemaddalone/hactar/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/joemaddalone/hactar.git"
	},
	"license": "ISC",
	"author": "Joe Maddalone",
	"type": "commonjs",
	"main": "dist/index.js",
	"bin": {
